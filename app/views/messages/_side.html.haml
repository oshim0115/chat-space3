.side
  .side-header
    .side-header-box
      %h3.side-header__name
        = current_user.name
      %ul.side-header__lists
        %li.list
          = link_to new_group_path do
            = icon('fa', 'edit',class: 'icon')
        %li.list
          = link_to edit_user_path(current_user.id) do
            = icon('fa', 'cog',class: 'icon')

  .side-groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__latest-message
            = group.show_last_message